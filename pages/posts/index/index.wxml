<view class="container-full" id="page-posts-index">
  <van-notice-bar mode="link" color="#000000" background="#ffffff" left-icon="volume-o" delay="0" speed="30"
                  bind:click="gotoHeyCommunityPage"
                  text="这是「HEY社区」的产品演示，你可以在这里自由地分享有意义或有趣的内容 ~">
  </van-notice-bar>
  <van-notify id="van-notify"></van-notify>

  <van-skeleton class="item-skeleton" title avatar avatar-size="44px" row="3" loading="{{ skeletonVisible }}"></van-skeleton>
  <van-skeleton class="item-skeleton" title avatar avatar-size="44px" row="2" loading="{{ skeletonVisible }}"></van-skeleton>
  <van-skeleton class="item-skeleton" title avatar avatar-size="44px" row="3" loading="{{ skeletonVisible }}"></van-skeleton>
  <van-skeleton class="item-skeleton" title avatar avatar-size="44px" row="2" loading="{{ skeletonVisible }}"></van-skeleton>
  <van-skeleton class="item-skeleton" title avatar avatar-size="44px" row="3" loading="{{ skeletonVisible }}">
    <view>
      <view wx:if="{{ models.length > 0 }}" class="items-post">
        <post-list id="comp-post-list" posts="{{ models }}"></post-list>
      </view>

      <view wx:else style="padding-top:100px;">
        <van-empty description="暂无动态"></van-empty>
      </view>
    </view>
  </van-skeleton>

  <!-- tips -->
  <view id="section-more-loading-tip" wx:if="{{  moreLoading }}" class="text-center padding-tb">
    <van-loading type="spinner">加载中...</van-loading>
  </view>
  <view id="section-more-loading-disabled-tip" class="padding-lr-xl padding-tb-lg" wx:if="{{ models.length && currentPage >= lastPage }}">
    <van-divider contentPosition="center" customStyle="margin:0;">没有更多动态了</van-divider>
  </view>

  <!-- 创建动态按钮 -->
  <navigator wx:if="{{ appGlobalData.isAuth }}" url="/pages/posts/create/index" class="btn-create cu-btn bg-blue round"><view class="icon cuIcon-post"></view></navigator>
  <navigator wx:else url="/pages/users/auth/index" class="btn-create cu-btn bg-blue round"><view class="icon cuIcon-post"></view></navigator>
</view>
