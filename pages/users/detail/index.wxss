.UCenter-bg {
  background-image: url(https://raw.githubusercontent.com/HeyCommunity/HeyCommunity-wxapp/dev-master/assets/images/users/default-cover.jpg);
  background-size: cover;
  height: 250rpx;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3); }
  .UCenter-bg .box {
    padding-left: 60rpx; }
    .UCenter-bg .box .avatar {
      height: 160rpx;
      width: 160rpx; }
  .UCenter-bg text {
    opacity: 0.8; }
  .UCenter-bg image {
    width: 200rpx;
    height: 200rpx; }
  .UCenter-bg .gif-wave {
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;
    height: 100rpx; }
