<view class="container-full">
  <scroll-view scroll-y class="scrollPage">
    <view class="UCenter-bg" bind:tap="needAuth" style="background-image: url(/assets/images/users/profile-bg.jpg)">
      <image wx:if="{{ userInfo.avatar }}" src="{{ userInfo.avatar }}" class="png" mode="widthFix" style="border-radius:50%;"></image>
      <image wx:else src="/assets/images/users/default-avatar.jpg" class="png" mode="widthFix" style="border-radius:50%;"></image>
      <view wx:if="{{ userInfo.nickname }}" class="text-xl margin-top-sm">{{ userInfo.nickname }}</view>
      <view wx:else class="text-xl margin-top-sm">请登录</view>
      <view class="margin-top-sm" wx:if="{{ userInfo.bio }}">
        <text>{{ userInfo.bio }}</text>
      </view>
      <image src="/assets/images/users/profile-wave.gif" mode="scaleToFill" class="gif-wave"></image>
    </view>

    <view class="padding flex text-center text-grey bg-white shadow-warp">
      <view class="flex flex-sub flex-direction solid-right">
        <view class="text-xxl text-orange">{{visitTotal?visitTotal:'2.4W'}}</view>
        <view class="margin-top-sm">
          <text class="cuIcon-attentionfill"></text> View</view>
      </view>
      <view class="flex flex-sub flex-direction solid-right">
        <view class="text-xxl text-blue">{{starCount?starCount:'3.0K'}}</view>
        <view class="margin-top-sm">
          <text class="cuIcon-favorfill"></text> Star</view>
      </view>
      <view class="flex flex-sub flex-direction">
        <view class="text-xxl text-green">{{forksCount?forksCount:'484'}}</view>
        <view class="margin-top-sm">
          <text class="cuIcon-fork"></text> Fork</view>
      </view>
    </view>

    <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
      <view class="cu-item arrow">
        <view class="content" bind:tap="gotoWebPage" data-link="http://rodsship.hey-community.com/timeline">
          <text class="cuIcon-likefill text-red"></text>
          <text class="text-grey">Rod's Ship</text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class="content" bind:tap="gotoWebPage" data-link="http://the.hey-community.com/timeline">
          <text class="cuIcon-likefill text-red"></text>
          <text class="text-grey">HEY社区大本营</text>
        </view>
      </view>
      <view class="cu-item arrow">
        <view class="content" bind:tap="gotoWebPage" data-link="https://www.hey-ganzhou.com/timeline">
          <text class="cuIcon-likefill text-red"></text>
          <text class="text-grey">HEY赣州</text>
        </view>
      </view>
    </view>

    <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
      <view class="cu-item arrow">
        <view class="content" bindtap="CopyLink" data-link="https://github.com/weilanwl/ColorUI">
          <text class="cuIcon-github text-grey"></text>
          <text class="text-grey">GitHub</text>
        </view>
      </view>
      <view class="cu-item arrow">
        <navigator class="content" url="/pages/about/log/log" hover-class="none">
          <text class="cuIcon-formfill text-green"></text>
          <text class="text-grey">日志</text>
        </navigator>
      </view>
      <view class="cu-item arrow">
        <view class="content" bindtap="showQrcode">
          <text class="cuIcon-appreciatefill text-red"></text>
          <text class="text-grey">赞赏支持</text>
        </view>
      </view>
      <view class="cu-item arrow">
        <button class="cu-btn content" open-type="feedback">
          <text class="cuIcon-writefill text-cyan"></text>
          <text class="text-grey">意见反馈</text>
        </button>
      </view>
      <view class="cu-item arrow">
        <navigator class="content" url="/pages/about/test/list" hover-class="none">
          <text class="cuIcon-creativefill text-orange"></text>
          <text class="text-grey">Bug测试</text>
        </navigator>
      </view>
    </view>
    <view class="cu-tabbar-height"></view>
  </scroll-view>
</view>
