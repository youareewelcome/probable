<!--index.wxml-->
<view class="container page-users-auth-index">
  <view class="text-center caption">登录到 HEY社区</view>
  <view class="text-center subtitle">微信授权快速登录</view>

  <view class="userinfo">
    <block wx:if="{{ canUseUserOpenData }}">
      <view class="avatar">
        <open-data type="userAvatarUrl"></open-data>
      </view>
      <view class="nickname margin-top-xs">
        <open-data type="userNickName"></open-data>
      </view>
    </block>
  </view>

  <button class="cu-btn btn-login lg bg-gradual-green block" bind:tap="userLoginHandler">
    <text class="cuIcon-weixin margin-right-sm icon"></text>
    登录
  </button>
</view>
